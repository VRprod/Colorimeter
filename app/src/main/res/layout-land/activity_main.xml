<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.graphics.Color"/>
        <variable name="backgroundColor" type="com.vrprod.colorimeter.model.Color"/>
        <variable name="textColor" type="com.vrprod.colorimeter.model.Color"/>
        <variable name="withText" type="com.vrprod.colorimeter.model.WithText"/>
    </data>
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/visualization"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            style="@style/visualization_text"
            android:text='@{withText.withText ? @string/visualization_text : ""}'
            android:background="@{Color.parseColor(backgroundColor.codeHexadecimal)}"
            android:textColor="@{Color.parseColor(textColor.codeHexadecimal)}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/visualization"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>
</layout>