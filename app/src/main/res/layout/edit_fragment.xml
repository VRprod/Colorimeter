<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.graphics.Color"/>
        <variable name="backgroundColor" type="com.vrprod.colorimeter.model.Color"/>
        <variable name="textColor" type="com.vrprod.colorimeter.model.Color"/>
    </data>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/vizualisation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="?attr/actionBarSize"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@{Color.parseColor(backgroundColor.codeHexadecimal)}"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:paddingBottom="50dp"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text='@{textColor.active ? @string/app_name : ""}'
                    android:textColor="@{Color.parseColor(textColor.codeHexadecimal)}"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text='@{textColor.active ? @string/visualization_text_content : ""}'
                    android:textColor="@{Color.parseColor(textColor.codeHexadecimal)}"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/background_light"
                app:behavior_hideable="false"
                app:behavior_peekHeight="?attr/actionBarSize"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="4dp"
                    android:background="?attr/colorPrimary">

                    <ImageButton
                        android:id="@+id/button_save_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/button_predefined_colors"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_not_saved"/>

                    <ImageButton
                        android:id="@id/button_predefined_colors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_list"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/code_hexadecimal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:errorEnabled="false"
                        app:hintEnabled="false">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="7"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:text="@{backgroundColor.codeHexadecimal}"
                            android:textAlignment="center" />
                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <SeekBar
                            android:id="@+id/sliderRed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/codeRgbRed"
                            android:layout_centerInParent="true"
                            android:enabled="@{backgroundColor.active}"
                            android:max="255"
                            android:maxHeight="2dp"
                            android:minHeight="2dp"
                            android:progress="@={backgroundColor.codeRgbRed}"
                            android:progressDrawable="@drawable/seekbar_red"
                            android:thumbTint="@color/red" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/codeRgbRed"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textStyle="bold"
                            app:errorEnabled="false"
                            app:hintEnabled="false">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="3"
                                android:text="@{String.valueOf(backgroundColor.codeRgbRed)}"
                                android:textAlignment="center"
                                android:textColor="@color/red" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <SeekBar
                            android:id="@+id/sliderGreen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/codeRgbGreen"
                            android:layout_centerInParent="true"
                            android:enabled="@{backgroundColor.active}"
                            android:max="255"
                            android:maxHeight="2dp"
                            android:minHeight="2dp"
                            android:progress="@={backgroundColor.codeRgbGreen}"
                            android:progressDrawable="@drawable/seekbar_green"
                            android:thumbTint="@color/green" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/codeRgbGreen"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textStyle="bold"
                            app:errorEnabled="false"
                            app:hintEnabled="false">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="3"
                                android:text="@{String.valueOf(backgroundColor.codeRgbGreen)}"
                                android:textAlignment="center"
                                android:textColor="@color/green" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <SeekBar
                            android:id="@+id/sliderBlue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/codeRgbBlue"
                            android:layout_centerInParent="true"
                            android:enabled="@{backgroundColor.active}"
                            android:max="255"
                            android:maxHeight="2dp"
                            android:minHeight="2dp"
                            android:progress="@={backgroundColor.codeRgbBlue}"
                            android:progressDrawable="@drawable/seekbar_blue"
                            android:thumbTint="@color/blue" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/codeRgbBlue"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textStyle="bold"
                            app:errorEnabled="false"
                            app:hintEnabled="false">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="3"
                                android:text="@{String.valueOf(backgroundColor.codeRgbBlue)}"
                                android:textAlignment="center"
                                android:textColor="@color/blue" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>

        <fragment
            android:id="@+id/predefined_fragment"
            android:name="com.vrprod.colorimeter.fragment.PredefinedFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@android:color/background_light"
            android:fitsSystemWindows="true"/>
    </android.support.v4.widget.DrawerLayout>
</layout>